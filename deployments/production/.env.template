# =============================================================================
# Claude Guardian Production Environment Configuration
# Copy this file to .env and customize for your deployment
# =============================================================================

# Database Configuration
POSTGRES_DB=claude_guardian
POSTGRES_USER=cguser
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!

# Security Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_MINIMUM_32_CHARS_LONG
SECURITY_LEVEL=moderate

# Vector Database Configuration  
QDRANT_API_KEY=optional_qdrant_api_key_for_auth

# Data Persistence Paths (absolute paths recommended)
QDRANT_DATA_PATH=./data/qdrant
POSTGRES_DATA_PATH=./data/postgres

# Feature Configuration
ENABLE_MONITORING=false
ENABLE_DEBUG_LOGGING=false

# Performance Tuning
MAX_CONNECTIONS=100
VECTOR_CACHE_SIZE=1000
THREAT_MODEL_CACHE_TTL=3600

# Alert Configuration (optional)
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=

# Compliance and Audit
AUDIT_RETENTION_DAYS=90
COMPLIANCE_MODE=standard
GDPR_ENABLED=false

# External Integrations (optional)
SIEM_INTEGRATION_ENABLED=false
SIEM_ENDPOINT=
SIEM_API_KEY=

# Development/Testing (set to false in production)
DEVELOPMENT_MODE=false
MOCK_THREAT_FEEDS=false