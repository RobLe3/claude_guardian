# =============================================================================
# Claude Guardian - Environment Variables Template
# Copy to .env and set your secure values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
POSTGRES_DB=claude_guardian
POSTGRES_USER=cguser
POSTGRES_PASSWORD=your_secure_database_password_here

# Database connection URL (auto-constructed from above)
DATABASE_URL=postgresql://cguser:your_secure_database_password_here@localhost:5432/claude_guardian

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis password for session management and caching
REDIS_PASSWORD=your_secure_redis_password_here

# Redis connection URL (auto-constructed from above)
REDIS_URL=redis://:your_secure_redis_password_here@localhost:6379/0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
ENVIRONMENT=production

# Application host and port
HOST=0.0.0.0
PORT=8083

# MCP Server Configuration
MCP_PORT=8083
MCP_HOST=0.0.0.0

# Security level (strict, moderate, permissive)
SECURITY_LEVEL=moderate

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# LightRAG Service (if used)
LIGHTRAG_URL=http://localhost:8000

# Embedding model for vector operations
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# DEVELOPMENT SETTINGS (dev environment only)
# =============================================================================
# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# QUICK SETUP GUIDE
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Generate secure passwords:
#    - For PostgreSQL: openssl rand -base64 32
#    - For Redis: openssl rand -base64 32
#    - For JWT: openssl rand -base64 32
# 3. Update the password fields above with your generated values
# 4. Adjust other settings as needed for your environment
# 5. Start services: docker-compose up -d
#
# SECURITY NOTE: Never commit your .env file to version control!